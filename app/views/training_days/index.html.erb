<p id="notice"><%= notice %></p>

<h1>Training Days</h1>

<table>
  <thead>
    <tr>
      <th>Exercise</th>
      <th>Food</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @training_days.each do |training_day| %>
      <tr>
        <td>
          <% if Exercise.where(:id => training_day.exercise_id).exists?%>
            <%= Exercise.find(training_day.exercise_id).name %>
          <% end %>
        </td>
        <td>
          <% if Food.where(:id => training_day.food_id).exists?%>
            <%= Food.find(training_day.food_id).name %>
          <% end %>
        </td>
        <td><%= link_to 'Show', training_day %></td>
        <td><%= link_to 'Edit', edit_training_day_path(training_day) %></td>
        <td><%= link_to 'Destroy', training_day, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Training Day', new_training_day_path %>
