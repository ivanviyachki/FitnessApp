<p id="notice"><%= notice %></p>

<section id="team" class="pb-5">
    <div class="container">
        <h5 class="section-title h1">Exercise Categories</h5>
        <div class="row">
            <!-- Team member -->
            <% @exercise_categories.each do |category| %>
	            <div class="col-xs-12 col-sm-6 col-md-4 mt-4">
	                <div class="image-flip" ontouchstart="this.classList.toggle('hover');">
	                    <div class="mainflip">
	                        <div class="frontside">
	                            <div class="card">
	                                <div class="card-body">
	                                <%= image_tag category.photo, style:"width:100%"%>
	                                </div>
	                            </div>
	                        </div>
	                        <div class="backside">
	                            <div class="card">
	                                <div class="card-body text-center align-middle">
	                                    <h1 class="card-title"><%= link_to category.name, exercises_path(category.id) %></h1>
	                            	</div>
	                        	</div>
	                    	</div>
	                	</div>
	            	</div>
	    		</div>
	    	<% end %>
   		</div>
   	</div>
</section>

<%= link_to 'New Exercise Category', new_exercise_category_path %>
